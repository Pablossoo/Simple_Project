{
    "source": {
        "directories": [
            "component/alerts/src",
            "component/alerts-calculating-process/src",
            "component/alerts-calculating-statistics/src",
            "component/download-raw-data/src",
            "component/integration-reference-data/src",
            "component/mongo-raw-data-publisher/src",
            "component/preparation-data-report/src",
            "component/raw-data/src",
            "component/raw-data-searcher/src",
            "component/raw-data-to-report-level-transporter/src",
            "component/report-importer/src",
            "component/source-raw-data-interpreter/src",
            "component/requirement-source-data-checker/src"
        ],
        "excludes": [
            "component/*/tests"
        ]
    },
    "logs": {
        "text": "data/infection/infection.log",
        "summary": "data/infection/summary.log",
        "json": "data/infection/infection-log.json",
        "perMutator": "data/infection/per-mutator.md"
    },
    "mutators": {
        "@arithmetic": true,
        "@boolean": true,
        "@cast": true,
        "@conditional_boundary": true,
        "@conditional_negotiation": true,
        "@equal": true,
        "@function_signature": true,
        "@identical": true,
        "@number": true,
        "@operator": true,
        "@regex": true,
        "@removal": true,
        "@return_value": true,
        "@sort": true,
        "@unwrap": true,
        "@extensions": true
    },
    "testFramework":"phpunit",
    "initialTestsPhpOptions": "-d xdebug.mode=coverage"
}
