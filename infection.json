{
    "source": {
        "directories": [
            "src"
        ],
        "excludes": [
            "src/*/tests"
        ]
    },
    "logs": {
        "text": "data/infection/infection.log",
        "summary": "data/infection/summary.log",
        "json": "data/infection/infection-log.json",
        "perMutator": "data/infection/per-mutator.md"
    },
    "mutators": {
        "@arithmetic": true,
        "@boolean": true,
        "@cast": true,
        "@conditional_boundary": true,
        "@conditional_negotiation": true,
        "@equal": true,
        "@function_signature": true,
        "@identical": true,
        "@number": true,
        "@operator": true,
        "@regex": true,
        "@removal": true,
        "@return_value": true,
        "@sort": true,
        "@unwrap": true,
        "@extensions": true
    },
    "testFramework":"phpunit",
    "initialTestsPhpOptions": "-d xdebug.mode=coverage"
}
